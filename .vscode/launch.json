    "version": "0.2.0",
    "configurations": [
        {
            "name": "ircserv", 
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ircserv", 
            "args": ["6667", "lol"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}